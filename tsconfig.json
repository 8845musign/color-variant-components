{
  "extends": "@create-figma-plugin/tsconfig",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "**/*.test.tsx", "**/test/**", "**/__tests__/**"]
}